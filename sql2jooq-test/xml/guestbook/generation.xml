<?xml version="1.0"?>

<project name="Guest Book Database Generation Tool" default="generate-library">
	<path id="library">
		<fileset dir="./../../../lib">
			<include name="**/*.jar"></include>
		</fileset>
	</path>

	<target name="generate-library">
		<java fork="true" classname="org.jooq.util.GenerationTool"
			classpathref="library">
			<classpath path="." />
			<arg value="/guestbook.xml" />
		</java>
    </target>
		   
    <target name="generate-guestbook">
        <java fork="true" classname="org.jooq.util.GenerationTool"
            classpathref="library">
            <classpath path="." />
            <arg value="/sakila.xml" />
        </java>
	</target>
</project>

